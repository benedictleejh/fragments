- content_for :story
  #story
  .off-canvas-wrap
    .inner-wrap
      == render 'fragments/show'
      
      .row
        h2 = @story.title
      
      #story-tree.row.text-center
        a.exit-off-canvas
  
  - if current_user
    == render 'fragments/new'
  - else
    == render 'shared/register_or_login'